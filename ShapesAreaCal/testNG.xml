<suite name="Selenium Suite" parraral="test">

    <test name="Test triangle">
        <parameter name="triangleBase" value="4"/>
        <parameter name="triangleHeight" value="8"/>
        <parameter name="triangleAreaExpected" value="16"/>

        <classes>
            <class name="testCases.testngParameter.TestTriangle"/>
        </classes>
    </test>
    <test name="Test square">
        <parameter name="squareSide" value="10"/>
        <parameter name="squareAreaExpected" value="100"/>
        <classes>
            <class name="testCases.testngParameter.TestSquare"/>
        </classes>
    </test>
    <test name="Test rectangle">
        <parameter name="rectangleWidth" value="4"/>
        <parameter name="rectangleHeight" value="5"/>
        <parameter name="rectangleAreaExpected" value="20"/>
        <classes>
            <class name="testCases.testngParameter.TestRectangle"/>
        </classes>
    </test>
    <test name="Test parallelogram">
        <parameter name="parallelogramBase" value="6"/>
        <parameter name="parallelogramVertical" value="9"/>
        <parameter name="parallelogramAreaExpected" value="54"/>

        <classes>
            <class name="testCases.testngParameter.TestParallelogram"/>
        </classes>
    </test>
    <test name="Test trapezoid">
        <parameter name="trapezoidA" value="3"/>
        <parameter name="trapezoidB" value="6"/>
        <parameter name="trapezoidH" value="4"/>
        <parameter name="trapezoidAreaExpected" value="18"/>

        <classes>
            <class name="testCases.testngParameter.TestTrapezoid"/>
        </classes>
    </test>
    <test name="Test circle">
        <parameter name="circleRadius" value="3"/>
        <parameter name="circleAreaExpected" value="28.26"/>

        <classes>
            <class name="testCases.testngParameter.TestCircle"/>
        </classes>
    </test>
    <test name="Test ellipse">
        <parameter name="ellipseA" value="5"/>
        <parameter name="ellipseB" value="6"/>
        <parameter name="ellipseAreaExpected" value="94.2"/>

        <classes>
            <class name="testCases.testngParameter.TestEllipse"/>
        </classes>
    </test>
    <test name="Test sector">
        <parameter name="sectorRadius" value="4"/>
        <parameter name="sectorTheta" value="30"/>
        <parameter name="sectorAreaExpected" value="240.0"/>

        <classes>
            <class name="testCases.testngParameter.TestSector"/>
        </classes>
    </test>


</suite>
